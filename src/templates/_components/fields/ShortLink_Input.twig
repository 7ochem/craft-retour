{% import "_includes/forms" as forms %}

{% namespace fieldName %}
    {{ forms.lightswitchField({
        label: "Enabled"|t("retour"),
        instructions: "Should this redirect be processed?"|t("retour"),
        id: "enabled",
        name: "enabled",
        on: value.enabled|default(false),
    }) }}


    {{ forms.textField({
        label: "Legacy URL Pattern"|t("retour"),
        instructions: "Enter the URL pattern that Retour should match.  This matches against the path only (the part of the URL after the domain name)."|t("retour"),
        id: "redirectSrcUrl",
        name: "redirectSrcUrl",
        class: 'nicetext',
        value: value.redirectSrcUrl|default(''),
        maxlength: 255,
        showCharsLeft: true,
    }) }}

    {{ forms.selectField({
        label: "Redirect Type"|t("retour"),
        instructions: "Select whether the redirect should be permanent or temporary."|t("retour"),
        id: "redirectHttpCode",
        name: "redirectHttpCode",
        value: value.redirectHttpCode|default('301'),
        options: {
            "301": "301 - Moved Permanently"|t("retour"),
            "302": "302 - Found"|t("retour"),
            "307": "307 - Temporary Redirect"|t("retour"),
            "308": "308 - Permanent Redirect"|t("retour"),
            "410": "410 - Gone"|t("retour"),
        }
    }) }}
{% endnamespace %}
